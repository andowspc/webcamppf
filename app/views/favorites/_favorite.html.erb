<% if item.favorited_by?(current_customer) %>
  <%= link_to item.favorites.count, item_favorites_path(item), method: :delete, class: "fas fa-heart heart_red fa-7x"  %>
<% else %>
  <%= link_to item.favorites.count, item_favorites_path(item), method: :post, class: "fas fa-heart heart_blue fa-7x"  %>
<% end %>