<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">

    <h1>商品一覧&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to"新規商品", new_admins_item_path, class: "btn btn-primary" %></h1>


    <table class="table table-striped shadow-sm">
      <thead>
        <tr></tr>
          <th>商品</th>
          <th>写真</th>
          <th>説明</th>
          <th>&nbsp;</th>
        </tr>
      </thaead>

      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= link_to admins_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
            <br><br><br>
            登録日:<%= item.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td>
            <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg", size:'100x100' %>
          </td>
          <td>
            <%=item.description %>
          </td>
          <td>
            <%= link_to"詳細", admins_item_path(item.id), class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>
      <%= paginate @items %>
      </tbody>
    </table>


    </div>
  </div>
</div>